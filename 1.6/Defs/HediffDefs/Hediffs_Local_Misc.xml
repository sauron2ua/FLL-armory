<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>FLL_Sting</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <description>Stings in target`s body temporarily restricts the movement</description>
    <label>Supression stings</label>

    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1000~3500</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>

      <li>
        <label>initial</label>
        <minSeverity>0.02</minSeverity>

        <statOffsets>
          <MoveSpeed>-0.2</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.2</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>

        <statOffsets>
          <MoveSpeed>-0.2</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>

        <statOffsets>
          <MoveSpeed>-0.2</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>

        <statOffsets>
          <MoveSpeed>-0.2</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>